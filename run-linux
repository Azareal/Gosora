echo "Deleting artifacts from previous builds"
rm template_*.go
rm gen_*.go
rm tmpl_client/template_*.go

echo "Generating the dynamic code"
go generate

echo "Building Gosora"
go build -o Gosora

echo "Building the templates"
./Gosora -build-templates

echo "Building Gosora... Again"
go build -o Gosora

echo "Running Gosora"
./Gosora